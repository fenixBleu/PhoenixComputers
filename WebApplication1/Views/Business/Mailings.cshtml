@model PhoenixWebCore.Models.MailingsModel

@{
    ViewData["Title"] = "Mailing List Members";
}
<center>

    <h1>@ViewData["Title"]</h1>

    <h3>This page displays members of the mailing lists by category.</h3>

    <br />
    <h2>Desktops</h2>

    <table border="1" class="table table-bordered center">
        <thead>
            <tr class="btn-primary">
                <th width="225px" text-align="center">Name</th>
                <th width="225px" text-align="center">Address</th>
                <th width="225px" text-align="center">E-mail</th>
                <th width="225px" text-align="center">Phone</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Desktop)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => b.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Phone)
                </td>

            </tr>
            }
        </tbody>
    </table>
